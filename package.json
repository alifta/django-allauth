{
  "name": "django-allauth",
  "version": "0.1.0",
  "description": "Django project with Tailwind CSS and DaisyUI",
  "scripts": {
    "build-css": "bun run tailwindcss -i ./static/css/input.css -o ./static/css/main.css --minify",
    "watch-css": "bun run tailwindcss -i ./static/css/input.css -o ./static/css/main.css --watch",
    "format": "prettier --write \"**/*.{html,js,json,css}\"",
    "format:check": "prettier --check \"**/*.{html,js,json,css}\""
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.17",
    "daisyui": "^4.12.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1"
  }
}
